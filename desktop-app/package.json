{
  "name": "@defich/wallet-desktop",
  "main": "./main/build/main.js",
  "author": {
    "name": "DeFiChain Foundation",
    "email": "engineering@defichain.com",
    "url": "https://defichain.com/"
  },
  "scripts": {
    "transpile": "tsc --p main/tsconfig.json",
    "transpile:prod": "tsc --p main/tsconfig.production.json",
    "watch": "tsc -w",
    "start:dev": "concurrently -p \"[{time} - {name}]\" -n \"ReactApp,Electron\" -c \"bgMagenta.black.bold,bgCyan.black.bold\" -t \"hh:mm:ss a\" \"npm run start:react\" \"npm run start:electron\"",
    "start:react": "cross-env SKIP_PREFLIGHT_CHECK=true BUILD_PATH=build react-scripts start",
    "start:electron": "node main/initiate-electron",
    "electron": "npm run transpile && cross-env NODE_ENV=development electron --inspect . -d true",
    "build:react": "cross-env SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "build:electron": "npm run build:react && npm run transpile:prod && npm run set_env:prod",
    "build": "npm run build:electron && electron-builder",
    "build:all": "npm run build:electron && electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps",
    "publish": "npm run build:react && npm run transpile:prod && npm run set_env:prod && electron-builder build -p always",
    "set_env:prod": "cross-env NODE_ENV=production"
  },
  "dependencies": {
    "electron-debug": "^3.2.0",
    "electron-log": "^4.4.1",
    "foreman": "^3.0.1",
    "is-electron": "^2.2.0",
    "loglevel": "^1.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.36",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "buffer": "6.0.3",
    "concurrently": "6.3.0",
    "cross-env": "7.0.3",
    "electron": "15.3.0",
    "electron-builder": "22.13.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-notarize": "1.1.1",
    "file-loader": "^6.2.0",
    "install": "^0.13.0",
    "jest": "26.6.0",
    "node-sass": "^6.0.1",
    "web-vitals": "^1.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=16"
  },
  "build": {
    "productName": "DeFiChain Wallet",
    "appId": "com.defichain.wallet",
    "copyright": "Copyright Â© 2021 ${author}",
    "asar": true,
    "afterSign": "./notarize/notarize.js",
    "files": [
      "./main/build",
      {
        "from": "./renderer/build/release/",
        "to": "./renderer",
        "filter": [
          "**/*"
        ]
      }
    ],
    "icon": "../shared/assets/icon-512.png",
    "dmg": {
      "sign": false,
      "icon": "../shared/assets/app.icns",
      "contents": [
        {
          "x": 40,
          "y": 150
        },
        {
          "x": 350,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "icon": "../shared/assets/icon-512.png",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": "NSIS"
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg"
      ],
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "./notarize/entitlements.mac.plist",
      "entitlementsInherit": "./notarize/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "publish": {
      "provider": "github",
      "repo": "wallet",
      "owner": "DeFiCh",
      "releaseType": "prerelease"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
